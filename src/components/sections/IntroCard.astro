---
import Card from '../Card.astro'
import { Button } from '../ui/button'
import { LINKS } from '../../lib/constants'
import { Linkedin, Github, Mail } from 'lucide-react'
import { getLangFromUrl, useTranslations } from '../../lib/i18n'

const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)
---

<Card colSpan="md:col-span-3" rowSpan="md:row-span-4">
  <div class="relative flex h-full w-full items-center">
    <!-- TEXT CONTENT -->
    <div class="flex w-full flex-col justify-center gap-6 md:w-2/3">
      <div>
        <h6 class="mb-2 text-sm font-light text-muted-foreground">
          {t('intro.welcome')}
        </h6>

        <p class="text-xl font-light leading-relaxed">
          {t('intro.p1')}
          <b class="font-bold">Kevin Armando Luciano Garc√≠a</b>
          {t('intro.p2')}
        </p>
      </div>

      <!-- SOCIAL BUTTONS -->
      <div class="flex gap-4">
        <a href={LINKS.github} aria-label="github profile" target="_blank">
          <Button aria-label="github profile">
            <Github />
            <span class="sr-only">{t('intro.github.sr')}</span>
          </Button>
        </a>

        <a href={LINKS.linkedin} aria-label="linkedin profile" target="_blank">
          <Button aria-label="linkedin profile">
            <Linkedin />
            <span class="sr-only">{t('intro.linkedin.sr')}</span>
          </Button>
        </a>

        <a href={LINKS.mail} aria-label="mail profile" target="_blank">
          <Button aria-label="mail profile">
            <Mail />
            <span class="sr-only">{t('intro.mail.sr')}</span>
          </Button>
        </a>
      </div>
    </div>

    <!-- IMAGE -->
    <img
      width="300"
      height="300"
      src="/me_cv.png"
      alt="memoji de Kevin Luciano"
      class="animate-bounce-subtle
        pointer-events-none
        absolute
        bottom-[-20px]
        right-[-110px]
        z-[-1]
        max-h-[300px]
        w-auto
        select-none
        opacity-50
        md:relative
        md:bottom-0
        md:right-0
        md:z-0
        md:w-1/3
        md:opacity-100"
    />
  </div>
</Card>

<style>
  @keyframes bounce-subtle {
    0%,
    100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-8px);
    }
  }

  .animate-bounce-subtle {
    animation: bounce-subtle 4s ease-in-out infinite;
  }
</style>
