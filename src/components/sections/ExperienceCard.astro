---
import Card from '../Card.astro'
import { Button } from '../ui/button'

const { experience, title, buttonText } = Astro.props
---

<Card colSpan="md:col-span-1" rowSpan="md:row-span-2" title={title}>
  <div class="mt-2 space-y-4">
    {
      experience.slice(0, 3).map((exp: any) => (
        <div>
          <div class="flex flex-col">
            <span class="font-bold">{exp.company}</span>
            <span class="text-sm text-muted-foreground">
              {exp.start} - {exp.end}
            </span>
            <span class="font-semibold">{exp.position}</span>
            <ul class="mt-2 list-inside list-disc space-y-1 text-sm text-foreground">
              {exp.tasks.slice(0, 3).map((task: string) => (
                <li>{task}</li>
              ))}
            </ul>
          </div>
        </div>
      ))
    }
    <a href="/work">
      <Button variant="link" className="pl-0"> {buttonText} </Button>
    </a>
  </div>
</Card>
